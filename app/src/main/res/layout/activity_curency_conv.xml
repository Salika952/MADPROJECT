<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/background"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".paymnet.CurencyConv">


    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="186dp"
        android:layout_height="82dp"
        app:srcCompat="@drawable/fitzky_logo001" />

    <LinearLayout
        android:layout_width="277dp"
        android:layout_height="93dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="287dp"
            android:layout_height="72dp"
            android:layout_marginBottom="70dp"
            android:gravity="center"
            android:text="Currency Converter"
            android:textColor="#3F51B5"
            android:textSize="30dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:text="Enter the amount : "
            android:textColor="#131313"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/txtAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioGroup
            android:layout_width="275dp"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioButton1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Convert to USI " />

            <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Convert to Srilankan Rupess" />
        </RadioGroup>

    </LinearLayout>


    <LinearLayout
        android:layout_width="179dp"
        android:layout_height="127dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btncnvrt"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="70dp"
            android:background="@drawable/custom_button"
            android:text="Converter"
            android:textSize="18sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


    </LinearLayout>

    <TextView
        android:id="@+id/txtResult"
        android:layout_width="274dp"
        android:layout_height="60dp"
        android:hint="@string/resultconvert" />






</LinearLayout>