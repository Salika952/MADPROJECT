<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".Newaddress">

    <TextView
        android:id="@+id/txtAddNewAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:text="@string/AdShippingDetails"
        android:textColor="#EC0505"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imgViewLication"
        android:layout_width="71dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="@drawable/location"
        app:srcCompat="@drawable/location"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/ET_Name"
        android:layout_width="320dp"
        android:layout_height="54dp"
        android:background="@drawable/custom_text"
        android:ems="10"
        android:hint="@string/enter_name"
        android:inputType="textPersonName"
        android:textColor="#9F9898"
        android:textColorHighlight="#F8F0F0"
        android:textColorHint="#7E7979"
        android:textSize="18sp"
        android:padding="10dp"
        android:layout_marginBottom="16dp" />



    <EditText
        android:id="@+id/ET_Phone"
        android:layout_width="320dp"
        android:layout_height="54dp"
        android:layout_marginBottom="16dp"
        android:padding="10dp"
        android:background="@drawable/custom_text"
        android:ems="10"
        android:hint="Phone Number"
        android:inputType="phone"
        android:textColor="#AFA4A4"
        android:textColorHint="#7E7979"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/ET_Postal"
        android:layout_width="320dp"
        android:layout_height="54dp"
        android:layout_marginBottom="16dp"
        android:padding="10dp"
        android:background="@drawable/custom_text"
        android:ems="10"
        android:textSize="18sp"
        android:hint="Postal Code"
        android:inputType="textPostalAddress"
        android:textColor="#BFB5B5"
        android:textColorHint="#7E7979" />

    <EditText
        android:id="@+id/ET_Address"
        android:layout_width="320dp"
        android:layout_height="54dp"
        android:layout_marginBottom="50dp"
        android:padding="10dp"
        android:background="@drawable/custom_text"
        android:ems="10"
        android:textSize="18sp"
        android:gravity="start|top"
        android:hint="Address"
        android:inputType="textMultiLine"
        android:textColorHint="#7E7979" />

    <Button
        android:id="@+id/btnSaveNewAddress"
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:layout_marginBottom="70dp"
        android:padding="10dp"
        android:background="@drawable/custom_button"
        android:text="@string/btn_save_Add_new_address"
        android:textColor="#E42315"
        android:textStyle="bold"
        android:textSize="22sp" />


</LinearLayout>